<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <link rel='stylesheet' href='/stylesheets/prettystyle.css' />
   
    <title>Document</title>
</head>
<body>
    
            <div class="box">
            <form method="POST" action="/new">
                <div class="messages">
                    <div class="nav">
                        <div class="dots">

                        
                        <span class="redbox"></span>
                        <span class="greenbox"></span>
                        <span class="yellowbox"></span>
                    </div>
                    </div>
                   
                    <p class="message-title"> <h2><%= title %></h2c></p>
                    
                    <% messages.forEach(function (message) { %>
                        <div class="message">
                        <span class="message-text"><%= message.text %></span> - <span class="message-user"><%= message.user %></span> (Added:<span class="message-added"><%= message.added %></span>)
                        </div>
                    <% }); %>
                </div>
                
                
                <div class="submit-container">
            
                    <div class="inner-sub-cont">

                    <label for="messageUser"></label>
                    <input type="text" name="messageUser" id="messageUser" required placeholder="Author's name">
                    <label for="messageText" ></label>
                    <input type="text" id="messageText" name="messageText"required placeholder="Message:">
                    <div class="img-div">
                        <img  id="send-btn" src="/images/plane.svg" alt="Paper Plane Icon"  onclick="submitForm()">
                    </div>
               

                </div>
                   
                </div>
               <!-- <button type="submit">bob</button>--> 
            </form>

            
        </div>
</body>
<script>
   function submitForm() {
    let messageUser = document.getElementById('messageUser');
    let messageText = document.getElementById('messageText');

    
    // Check if both fields are not empty
    if (messageUser.value.trim() !== '' && messageText.value.trim() !== '') {
        document.forms[0].submit();
    } else {
        console.log('Please fill in both fields.');
    }
}
</script>
</html>